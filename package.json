        "eslint": "^9.26.0",
        "nodemon": "^3.1.10",
        "prettier": "^3.5.3",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.8.3",
        "uuid": "^11.1.0"
    },
    "dependencies": {
        "@babel/core": "^7.27.1",
        "@babel/preset-env": "^7.27.2",
        "@babel/preset-typescript": "^7.27.1",
        "@types/jest": "^29.5.14",
        "@types/uuid": "^10.0.0",
        "babel-jest": "^29.7.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.3.2",
        "ts-loader": "^9.5.2",
        "webpack": "^5.99.8",
        "webpack-cli": "^6.0.1",
